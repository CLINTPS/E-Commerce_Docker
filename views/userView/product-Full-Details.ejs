<%-include('../userView/include/user_header')-%>
<section class="p-3" style="background:linear-gradient(135deg, #ffffff, #ffffff);">
    <div class="container-fluid">
      <div class="row">
        <!-- sidebar -->
        <div class="col-lg-2">
          <!-- Toggle button for mobile -->
          <button class="btn btn-outline-secondary mb-3 w-100 d-lg-none" type="button" data-mdb-toggle="collapse" data-mdb-target="#filterAccordion" aria-expanded="false">
              Show Filter
          </button>
      
          <!-- Collapsible filter section -->
          <div class="collapse card d-lg-block mb-5" id="filterAccordion">
              <div class="accordion" id="accordionPanelsStayOpenExample">
                  <!-- Brand filter -->
                  <div class="accordion-item">
                      <h2 class="accordion-header" id="brandHeading">
                          <button class="accordion-button text-dark bg-light" type="button" data-mdb-toggle="collapse" data-mdb-target="#brandFilter" aria-expanded="true">
                              Brand
                          </button>
                      </h2>
                      <div id="brandFilter" class="accordion-collapse collapse show" aria-labelledby="brandHeading">
                          <div class="accordion-body">
                              <!-- Checked checkboxes for brand -->
                              <% if (brandData) { %>
                                  <% brandData.forEach((data) => { %>
                                      <div class="form-check">
                                          <input class="form-check-input" type="checkbox" value="<%= data.name %>" id="brandCheckbox<%= data.id %>" />
                                          <label class="form-check-label" for="brandCheckbox<%= data.id %>"><%= data.name %></label>
                                      </div>
                                  <% }) %>
                              <% } %>
                          </div>
                      </div>
                  </div>
      
                  <!-- Price range filter -->
                  <div class="accordion-item">
                      <h2 class="accordion-header" id="priceHeading">
                          <button class="accordion-button text-dark bg-light" type="button" data-mdb-toggle="collapse" data-mdb-target="#priceFilter" aria-expanded="true">
                              Price
                          </button>
                      </h2>
                      <div id="priceFilter" class="accordion-collapse collapse show" aria-labelledby="priceHeading">
                          <div class="accordion-body">
                              <div class="range">
                                  <input type="range" class="form-range" id="priceRange" />
                              </div>
                              <div class="row mb-3">
                                  <div class="col-6">
                                      <p class="mb-0">Min</p>
                                      <div class="form-outline">
                                          <input type="number" id="minPrice" class="form-control" />
                                          <label class="form-label" for="minPrice">$0</label>
                                      </div>
                                  </div>
                                  <div class="col-6">
                                      <p class="mb-0">Max</p>
                                      <div class="form-outline">
                                          <input type="number" id="maxPrice" class="form-control" />
                                          <label class="form-label" for="maxPrice">$10,000</label>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
              <!-- Apply filter button -->
              <button type="button" class="btn btn-white w-100 border border-secondary">Apply</button>
          </div>
      </div>
      
      
        

<!-- sidebar -->
<!-- content -->
<div class="col-lg-9">
    <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3"></header>
          <% if (productData) { %>
            <% productData.forEach((data) => { %>
              <div class="row justify-content-center mb-3" >
                <div class="col-md-12">
                  <div class="card shadow-0 border rounded-3">
                    <div class="card-body" style="background:linear-gradient(135deg, #ffffff, #ffffff);">
                      <div class="row g-0">
                        <div class="col-xl-3 col-md-4 d-flex justify-content-center" >
                          <div class="bg-image hover-zoom ripple rounded ripple-surface me-md-3 mb-3 mb-md-0">
                            <a href="/productDetails/<%=data._id%>">
                                <img src="/product-img/<%= data.images[0]%>" alt="Products img.." class="w-75" />
                            </a>
                          </div>
                        </div>
                        <div class="col-xl-6 col-md-5 col-sm-7">
                          <a href="/productDetails/<%=data._id%>" style="text-decoration: none;"> <h5><%=data.ProductName%></h5></a>
                          <br>
                          <p class="para"><i class="fa-solid fa-circle fa-2xs"></i>
                            <%=data.Specification1%>
                        </p>
                        <p class="para"><i class="fa-solid fa-circle fa-2xs"></i>
                            <%=data.Specification2%>
                        </p>
                        <p class="para"><i class="fa-solid fa-circle fa-2xs"></i>
                            <%=data.Specification3%>
                        </p>
                        <p class="para"><i class="fa-solid fa-circle fa-2xs"></i>
                            <%=data.Specification4%>
                        </p>
                          <p class="text mb-4 mb-md-0">
                            <%=data.Description%>
                          </p>
                        </div>
                        <div class="col-xl-3 col-md-3 col-sm-5">
                          <div class="d-flex flex-row align-items-center mb-1">
                            <h4 class="mb-1 me-1">₹<%=data.DiscountAmount%></h4>
                            <s class="text-danger">₹<%=data.Price%></s>
                          </div>
                          <% if (data.AvailableQuantity > 0) { %>
                            <h6 class="text-success">In stock</h6>
                          <% } else { %>
                            <h6 class="text-danger">out of stock</h6>
                          <% } %>
                          <div class="mt-4">
                            <button class="btn btn-dark shadow-0 add-to-cart-button" data-product-id="<%= data._id %>">Add to Cart</button>
                            <!-- <a href="#!" class="btn btn-dark border px-2 pt-2 icon-hover"><i class="fa-solid fa-heart fa-lg" style="color: #17e14a;"></i></a> -->
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
            <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
              <ul class="pagination">
                  <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                      <a class="page-link" href="<%= page <= 1 ? '#' : '/allProducts?page=' + (page - 1) %>" style="color: black;" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                      </a>
                  </li>
                  <li class="page-item">
                      <a class="page-link" href="/allProducts?page=<%= page %>" style="color: black"><%= page %></a>
                  </li>
                  <li class="page-item <%= page >= productDataCount ? 'disabled' : '' %>">
                      <a class="page-link" href="<%= page >= productDataCount ? '#' : '/allProducts?page=' + (page + 1) %>" style="color: black;" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                      </a>
                  </li>
              </ul>
          </nav>
          
          
          
          
          
          <% } else { %>
            <h1>404 not found</h1>
          <% } %>
          <!-- Pagination code here -->
          <!-- Pagination -->
        </div>
      </div>
    </div>
  </section>
  
<%-include('../userView/include/user_footer')-%>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="your-script.js"></script>

<script>
     document.querySelectorAll('.add-to-cart-button').forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();

            const productId = this.getAttribute('data-product-id');
            console.log(productId);

            $.ajax({
                url: '/addtocart/' + productId,
                method: 'POST',
                success: function (response) {

                    alert('Product added to cart');
                    updateCartQuantity();
                    location.reload()
                },
                error: function (error) {
                    console.error('Error adding product to cart:', error);
                }
            });
        });
    });
</script>