                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9">
                                    <%if(UserData.address[0]){%>
                                        <p class="text-muted mb-0"><%= UserData.address[0].mobile%></p>
                                        <%}else{%>
                                        <p class="text-muted mb-0">-----</p>
                                        <%}%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Address</p>
                                </div>
                                <div class="col-sm-9">
                                    <%if(UserData.address[0]){%>
                                        <p class="text-muted mb-0"><%= UserData.address[0].addressLine%></p>
                                        <%}else{%>
                                        <p class="text-muted mb-0">-----</p>
                                        <%}%>
                                </div>
                            </div>
                        </div>
                    </div>


