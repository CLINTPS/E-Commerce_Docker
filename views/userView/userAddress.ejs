<%- include('../userView/include/user_header') -%>
    <div class="col-lg-12" style="background: linear-gradient(135deg, #817f7f, #ffffff);;">
        <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3"></header>

        <% userAddressData.address.forEach(address=> { %>
            <div class="row justify-content-center mb-3">
                <div class="col-md-6">
                    <div class="card shadow border rounded-3">
                        <div class="card-body" style="background: linear-gradient(135deg, #ffffff, #ffffff);">



                            <div class="address-card row">

                                    <div class="col-5">
                                        <div class="address-line"><h4>Name</h4></div>
                                        <div class="address-line">Address</div>
                                        <div class="address-line">Mobile</div>
                                        <div class="address-line">City</div>
                                        <div class="address-line">State</div>
                                        <div class="address-line">Pincode code</div>
                                    </div>
                                <div class="col-6">
                                    <div class="address-value">
                                        <h4>
                                            <%= address.nameuser %>
                                        </h4>
                                    </div>
                                    <div class="address-value">: <%= address.addressLine %>
                                    </div>
                                    <div class="address-value">: <%= address.mobile %>
                                    </div>
                                    <div class="address-value">: <%= address.city%>
                                    </div>
                                    <div class="address-value">: <%= address.state %>
                                    </div>
                                    <div class="address-value">: <%= address.pincode %>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <br>

                                    <!-- <a href="/editAddress/<%= address._id%>" 
                                  class="btn btn-secondary"> Edit</a> -->
                                    <button class="btn btn-outline-success"
                                        onclick="openEditAddressModal('<%= address._id %>')">Edit</button>
                                    <a href="/deleteAddress/<%= address._id%>"
                                        onclick="return confirm('Do you want delete the address')"
                                        class="btn btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Address Modal -->
            <div class="modal fade" id="editAddressModal<%= address._id %>" tabindex="-1" role="dialog"
                aria-labelledby="editAddressModalLabel" aria-hidden="true">

                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editAddressModalLabel">Edit Address</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <!-- Edit Address Form -->
                            <form action="/user/editUserAddress/<%= address._id %>" method="post">

                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Name:</label>
                                    <input type="text" name="nameuser" class="form-control" id="recipient-name"
                                        value="<%= address.nameuser %>">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Address:</label>
                                    <input type="text" name="addressLine" class="form-control" id="recipient-name"
                                        value="<%= address.addressLine %>">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">City:</label>
                                    <input type="text" name="city" class="form-control" id="recipient-name"
                                        value="<%= address.city %>">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Pincode:</label>
                                    <input pattern="[0-9]{6}" type="number" name="pincode" class="form-control"
                                        id="recipient-name" value="<%= address.pincode %>">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">State:</label>
                                    <input type="text" name="state" class="form-control" id="recipient-name"
                                        value="<%= address.state %>">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Mobile Number:</label>
                                    <input type="number" name="mobile" class="form-control" id="recipient-name"
                                        value="<%= address.mobile %>">
                                </div>
                                <!-- End of Edit Address Form -->
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>

                <% if (userAddressData.address.length===0) { %>
                    <h1 style="text-align: center;">Address Empty</h1>
                    <% } %>

                        <!-- Add Address Modal -->
                        <div class="row" >
                            <div class="col-sm-12" style="padding-left: 960px;">
                                <button type="button" class="btn btn-warning" data-toggle="modal"
                                    data-target="#exampleModal" data-whatever="@fat">Add New Address</button>
                            </div>
                        </div>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/user/addAddress" method="post">
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Name:</label>
                                                <input type="text" name="nameuser" class="form-control"
                                                    id="recipient-name">
                                            </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Address:</label>
                                                <input type="text" name="addressLine" class="form-control"
                                                    id="recipient-name">
                                            </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">City:</label>
                                                <input type="text" name="city" class="form-control" id="recipient-name">
                                            </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Pincode:</label>
                                                <input pattern="[0-9]{6}" title="Please enter a 6-digit pincode"
                                                    type="number" name="pincode" class="form-control"
                                                    id="recipient-name">
                                            </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">State:</label>
                                                <input type="text" name="state" class="form-control"
                                                    id="recipient-name">
                                            </div>
                                            <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Mobile
                                                    Number:</label>
                                                <input type="number" name="mobile" class="form-control"
                                                    id="recipient-name">
                                            </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Pagination code here -->
                        <!-- Pagination -->
                        <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
                            <ul class="pagination">

                            </ul>
                        </nav>
    </div>

    <%- include('../userView/include/user_footer') -%>
        <!-- Include jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- Include Bootstrap CSS and JavaScript (if not already included) -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

        <script>
            function openEditAddressModal(addressId) {
                $('#editAddressModal' + addressId).modal('show');
            }
        </script>