<%-include('../userView/include/user_header')-%>
<div class="col-lg-12">
    <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3"></header>
    <% userAddressData.address.forEach(address => { %>

              <div class="row justify-content-center mb-3" >
                <div class="col-md-12">
                  <div class="card shadow-0 border rounded-3">
                    <div class="card-body" style="background:linear-gradient(135deg, #ffffff, #ffffff);">
                      <div class="row g-0">
                        <div class="col-xl-6 col-md-5 col-sm-7">
                          <a href="#" style="text-decoration: none;"> <h5><%=address.nameuser%></h5></a>
                          <p class="text mb-4 mb-md-0">
                            <%= address.addressLine %>
                        </p>
                        <p class="text mb-4 mb-md-0">
                            <%= address.mobile %>
                        </p>
                        <p class="text mb-4 mb-md-0">
                            <%= address.city %>
                        </p>
                        <p class="text mb-4 mb-md-0">
                            <%= address.state %>
                        </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
              
              <% if (userAddressData.address.length === 0) { %>
                <h1 style="text-align: center;">Address Empty</h1>
            <% } %>
          <div class="row">
            <div class="col-sm-12">
                <button type="button" class="btn btn-secondary" data-toggle="modal"
                    data-target="#exampleModal" data-whatever="@fat">Add Address</button>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/user/addAddress" method="post">
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Name:</label>
                                <input type="text" name="nameuser" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Address:</label>
                                <input type="text" name="addressLine" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">City:</label>
                                <input type="text" name="city" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Pincode:</label>
                                <input pattern="[0-9]{6}" title="Please enter a 6-digit pincode"
                                    type="number" name="pincode" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">State:</label>
                                <input type="text" name="state" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Mobile Number:</label>
                                <input type="number" name="mobile" class="form-control" id="recipient-name">
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Address</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
          <!-- Pagination code here -->
          <!-- Pagination -->
          <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
            <ul class="pagination">
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">4</a></li>
              <li class="page-item"><a class="page-link" href="#">5</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>

        </div>
<%-include('../userView/include/user_footer')-%>