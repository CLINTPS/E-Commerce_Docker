<%-include('../userView/include/user_header')-%>
<div class="bg-light">
    <div>
        <div class="text-center">
            <div class="dashbrd"  style="width: 100%; background-color: rgb(234, 240, 230);">
                <a href="" class="btn btn-warning" style="position: absolute; margin-top: 35%; left:12%">Buy Now</a>
                <a href="" class="btn btn-light" style="position: absolute; margin-top: 35%; left:20%">Add To Cart</a>
                <img src="/images/first.webp" class="d-block w-100" alt="">
                <h1 class="text-black pt-4 ">Discover NEW Arrivals</h1>
                <P>Recently added Mobiles!</P>
                         
                <div class="row" style="margin:0%;">
                    <% if (Array.isArray(productData)) { %>
                    <% productData.forEach((x)=>{ %>
                        <% if(x.AvailableQuantity > 0 && x.Status===true){%>
                    <div class="col-md-3 p-4">
                        <div class="card" style="width: 18rem; margin-left: 20px;">
                            <img class="card-img-top" style="height: 290px; width: 250px; padding: 20px; margin-left: 20px;" src="/product-img/<%= x.images[0] %>" alt="Card image cap">
                            <div class="card-body">
                                <h6 class="card-title"><%=x.ProductName%></h6>
                                <p class="card-title"><%=x.BrandName%></p>
                                <p class="card-text" style="font-weight: 700;">â‚¹<%=x.Price%>/-</p>
                                <a href="/addTocart/<%=x._id%>" class="btn btn-warning">Add To Cart</a>
                                <a href="/productDetails/<%=x._id%>" class="btn btn-primary">view Details</a>
                            </div>
                        </div>     
                    </div>
                    <% } %>     
                    <%}) %>
                    <% } %>
                </div>
                <a href="/allProducts">View All</a> 
            </div>            
        </div>
    </div>
</div>
<%-include('../userView/include/user_footer')-%>